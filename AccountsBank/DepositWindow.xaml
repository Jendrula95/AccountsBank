<Window x:Class="AccountsBank.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountsBank"
        mc:Ignorable="d"
        Title="DepositWindow" Height="185" Width="325">
    <Grid>
        <Label Content="   Wprowadż kwote" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="DepoValue" HorizontalAlignment="Left" Margin="70,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="DepositCash" Content="Wpłać" HorizontalAlignment="Left" Margin="70,124,0,0" VerticalAlignment="Top" Width="72" Click="DepositCash_Click" MouseDoubleClick="DepositCash_MouseDoubleClick"/>
        <Button x:Name="Cancel" Content="Powrót" HorizontalAlignment="Left" Margin="195,124,0,0" VerticalAlignment="Top" Width="65" Click="Cancel_Click"/>

    </Grid>
</Window>
